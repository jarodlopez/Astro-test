---
// import '../styles/global.css'; // Descomenta si tienes CSS global
import { isCartOpen } from '../store/cartStore';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="HomeMart - Tecnolog√≠a y Estilo de Vida" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    {/* Usaremos 'Outfit' para t√≠tulos y 'Inter' para texto, muy moderno */}
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Outfit:wght@500;700;800&display=swap" rel="stylesheet">
  </head>
  
  <body class="bg-zinc-50 font-sans text-zinc-800 antialiased flex flex-col min-h-screen selection:bg-indigo-500 selection:text-white">
    
    {/* Header Moderno: Sticky + Glassmorphism */}
    <header class="sticky top-0 z-40 w-full backdrop-blur-lg bg-white/80 border-b border-zinc-200/50 transition-all duration-300">
      <nav class="container mx-auto px-6 h-20 flex justify-between items-center gap-8">
        {/* Logo Minimalista */}
        <a href="/" class="group flex items-center gap-2">
          <div class="bg-indigo-600 text-white w-10 h-10 rounded-xl flex items-center justify-center font-bold text-xl shadow-lg shadow-indigo-500/30 transition-transform group-hover:scale-110 group-hover:rotate-3">
            H
          </div>
          <span class="font-display font-bold text-xl tracking-tight text-zinc-900 group-hover:text-indigo-600 transition-colors">
            HomeMart
          </span>
        </a>

        {/* Buscador Central (M√°s sutil) */}
        <div class="hidden md:flex flex-1 max-w-md relative group">
          <input 
            type="text" 
            placeholder="¬øQu√© est√°s buscando hoy?" 
            class="w-full pl-12 pr-4 py-3 bg-zinc-100/50 border-0 rounded-full text-zinc-700 placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-indigo-500/20 focus:bg-white transition-all shadow-sm"
          />
          <svg xmlns="http://www.w3.org/2000/svg" class="absolute left-4 top-3.5 h-5 w-5 text-zinc-400 group-focus-within:text-indigo-600 transition-colors" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
        </div>

        {/* Men√∫ derecho */}
        <div class="flex items-center gap-6">
          <a href="#" class="hidden sm:block text-sm font-medium text-zinc-500 hover:text-indigo-600 transition-colors">
            Mis Pedidos
          </a>
          
          <button id="cart-btn" class="relative group p-2 hover:bg-indigo-50 rounded-full transition-colors">
            <div class="relative">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-700 group-hover:text-indigo-600 transition-colors"><path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"/><path d="M3 6h18"/><path d="M16 10a4 4 0 0 1-8 0"/></svg>
              {/* Indicador de "punto" en lugar de n√∫mero si quieres algo minimalista, o un badge bonito */}
              <span class="absolute -top-1 -right-1 flex h-4 w-4">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-indigo-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-4 w-4 bg-indigo-600 border-2 border-white"></span>
              </span>
            </div>
          </button>
        </div>
      </nav>
      
      {/* Subnav Categor√≠as (Opcional, m√°s limpia) */}
      <div class="border-t border-zinc-100 bg-white/50 hidden md:block">
        <div class="container mx-auto px-6 py-2 flex gap-8 text-xs font-semibold text-zinc-500 uppercase tracking-wide justify-center">
          <a href="#" class="hover:text-indigo-600 transition-colors">Novedades</a>
          <a href="#" class="hover:text-indigo-600 transition-colors">Tecnolog√≠a</a>
          <a href="#" class="hover:text-indigo-600 transition-colors">Muebles</a>
          <a href="#" class="hover:text-indigo-600 transition-colors">Accesorios</a>
          <a href="#" class="text-rose-500 hover:text-rose-600 transition-colors">Ofertas üî•</a>
        </div>
      </div>
    </header>

    <main class="flex-grow w-full">
      <slot />
    </main>

    <footer class="bg-white border-t border-zinc-200 pt-16 pb-8 mt-20">
      <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-12">
          <div class="space-y-4">
            <h4 class="font-display font-bold text-lg text-zinc-900">HomeMart</h4>
            <p class="text-zinc-500 text-sm leading-relaxed">
              Redefiniendo la experiencia de compra online con productos curados para tu estilo de vida moderno.
            </p>
          </div>
          
          <div>
            <h4 class="font-bold text-zinc-900 mb-4 text-sm uppercase tracking-wider">Comprar</h4>
            <ul class="space-y-3 text-sm text-zinc-500">
              <li><a href="#" class="hover:text-indigo-600 transition-colors">Todo el cat√°logo</a></li>
              <li><a href="#" class="hover:text-indigo-600 transition-colors">Los m√°s vendidos</a></li>
              <li><a href="#" class="hover:text-indigo-600 transition-colors">Nuevos lanzamientos</a></li>
            </ul>
          </div>

          <div>
            <h4 class="font-bold text-zinc-900 mb-4 text-sm uppercase tracking-wider">Soporte</h4>
            <ul class="space-y-3 text-sm text-zinc-500">
              <li><a href="#" class="hover:text-indigo-600 transition-colors">Estado del pedido</a></li>
              <li><a href="#" class="hover:text-indigo-600 transition-colors">Centro de ayuda</a></li>
              <li><a href="#" class="hover:text-indigo-600 transition-colors">Devoluciones</a></li>
            </ul>
          </div>

          <div>
            <h4 class="font-bold text-zinc-900 mb-4 text-sm uppercase tracking-wider">Legal</h4>
            <ul class="space-y-3 text-sm text-zinc-500">
              <li><a href="#" class="hover:text-indigo-600 transition-colors">Privacidad</a></li>
              <li><a href="#" class="hover:text-indigo-600 transition-colors">T√©rminos</a></li>
            </ul>
          </div>
        </div>
        
        <div class="border-t border-zinc-100 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-zinc-400 text-sm">¬© 2025 HomeMart Inc.</p>
          <div class="flex gap-4">
            {/* Iconos sociales o de pago simplificados */}
            <div class="w-8 h-5 bg-zinc-200 rounded"></div>
            <div class="w-8 h-5 bg-zinc-200 rounded"></div>
            <div class="w-8 h-5 bg-zinc-200 rounded"></div>
          </div>
        </div>
      </div>
    </footer>

    <script>
      import { isCartOpen } from '../store/cartStore';
      const btn = document.getElementById('cart-btn');
      if(btn) btn.addEventListener('click', () => isCartOpen.set(true));
    </script>
    
    <style is:global>
      /* Fuentes importadas */
      .font-display { font-family: 'Outfit', sans-serif; }
      body { font-family: 'Inter', sans-serif; }
    </style>
  </body>
</html>
