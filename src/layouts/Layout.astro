---
interface Props {
  title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="CactusWorld: Tu tienda de cactus premium" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-100 font-sans">
    <header class="bg-primary text-white py-4">
      <nav class="container mx-auto flex justify-between items-center">
        <h1 class="text-2xl font-bold">CactusWorld</h1>
        <ul class="flex space-x-4">
          <li><a href="#home" class="hover:underline">Inicio</a></li>
          <li><a href="#products" class="hover:underline">Productos</a></li>
          <li><a href="#about" class="hover:underline">Sobre Nosotros</a></li>
          <li><a href="#contact" class="hover:underline">Contacto</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="bg-gray-800 text-white py-4 mt-8">
      <div class="container mx-auto text-center">
        <p>&copy; 2025 CactusWorld. Todos los derechos reservados.</p>
        <ul class="flex justify-center space-x-4 mt-2">
          <li><a href="https://twitter.com" class="hover:underline">Twitter</a></li>
          <li><a href="https://instagram.com" class="hover:underline">Instagram</a></li>
        </ul>
      </div>
    </footer>
  </body>
</html>
